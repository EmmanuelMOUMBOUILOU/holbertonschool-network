#!/usr/bin/env bash
# This script updates /etc/hosts so localhost resolves to 127.0.0.2 and facebook.com resolves to 8.8.8.8

# Backup original hosts file (just in case)
cp /etc/hosts /etc/hosts.bak

# Replace localhost's entry to 127.0.0.2 (only the exact "127.0.0.1 localhost" line)
sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts

# Remove any existing facebook.com entries
sed -i '/facebook\.com/d' /etc/hosts

# Add facebook.com to point to 8.8.8.8
echo "8.8.8.8 facebook.com" >> /etc/hosts
