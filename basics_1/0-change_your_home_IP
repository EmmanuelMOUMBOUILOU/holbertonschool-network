#!/usr/bin/env bash
# This script configures /etc/hosts so that localhost resolves to 127.0.0.2 and facebook.com to 8.8.8.8

# Modifier la ligne localhost → 127.0.0.2
sudo sed -i 's/127\.0\.0\.1[[:space:]]\+localhost/127.0.0.2\tlocalhost/' /etc/hosts

# Supprimer d’anciennes lignes facebook.com si présentes
sudo sed -i '/facebook.com/d' /etc/hosts

# Ajouter la résolution de facebook.com → 8.8.8.8
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
