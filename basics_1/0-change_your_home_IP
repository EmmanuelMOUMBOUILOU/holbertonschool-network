#!/usr/bin/env bash
# This script updates /etc/hosts so localhost resolves to 127.0.0.2 and facebook.com resolves to 8.8.8.8

# Backup original hosts file (just in case)
sudo cp /etc/hosts /etc/hosts.bak

# Replace localhost entry
sudo sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts

# Remove any existing facebook.com entries
sudo sed -i '/facebook\.com/d' /etc/hosts

# Add facebook.com to point to 8.8.8.8
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
